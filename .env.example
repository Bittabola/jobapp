# JobApp Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================

# Google Gemini API key for cover letter generation
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API key for text humanization
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Personal Information (Required)
# =============================================================================

# Your full name (used in cover letter header)
USER_NAME=John Doe

# Your email address
USER_EMAIL=john.doe@example.com

# =============================================================================
# Personal Information (Optional)
# =============================================================================

# Your professional title
USER_TITLE=Software Engineer

# Your location (City, State/Province, Country)
USER_LOCATION=San Francisco, CA, USA

# Your phone number
USER_PHONE=+1 (555) 123-4567

# Your LinkedIn profile URL
USER_LINKEDIN=https://www.linkedin.com/in/johndoe/

# Filename slug for generated PDFs (defaults to lowercase name with underscores)
# Example: "john_doe" produces "cover_letter_john_doe_company.pdf"
FILENAME_SLUG=john_doe

# =============================================================================
# Server Configuration (Optional)
# =============================================================================

# Host to bind to (default: 127.0.0.1, use 0.0.0.0 to expose on network)
# HOST=127.0.0.1

# Port to run on (default: 8000)
# PORT=8000

# Enable development mode with auto-reload (default: false)
# DEV_MODE=true
